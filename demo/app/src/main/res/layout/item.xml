<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_layout"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/list_textview"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/golden_item_text_tv"
            android:textSize="14sp"
            android:textColor="#FD8018"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="38dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/sliver_item_text_tv"
            android:textColor="#999999"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="38dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp" />

        <ImageView
            android:id="@+id/liwubang_iv1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="38dp" />

        <ImageView
            android:id="@+id/liwubang_iv2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignRight="@id/liwubang_iv1"
            android:layout_marginRight="38dp"/>

        <ImageView
            android:id="@+id/liwubang_iv3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignRight="@id/liwubang_iv2"
            android:layout_marginRight="38dp" />

    </RelativeLayout>

</LinearLayout>